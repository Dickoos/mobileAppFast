RootWidget:
    container: container

    text_input_list_guests: text_input_list_guests

    BoxLayout:
        id: container
        orientation: "vertical"
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: 0.4
            orientation: "horizontal"
            padding: 10
            spacing: 10

            GridLayout:
                cols: 2

                Label:
                    text: "Date:"

                TextInput:
                    multiline: False

                Label:
                    text: "Name:"

                TextInput:
                    multiline: False

                Label:
                    text: "Phone:"

                TextInput:
                    multiline: False

                Button:
                    text: "Find"

            Button:
                size_hint_x: 0.2
                text: "Options"

        TextInput:
            id: text_input_list_guests
            multiline: True
            readonly: True