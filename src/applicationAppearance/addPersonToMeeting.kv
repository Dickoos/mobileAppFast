RootWidget:
    container: container

    text_input_phone: text_input_phone
    text_input_date: text_input_date
    text_input_list: text_input_list

    popup_invalid_data: popup_invalid_data

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        Popup:
            id: popup_invalid_data
            title: "Data entered incorrectly!"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 5
                spacing: 10

                TextInput:
                    text: "Wrong data.\nPossible reasons:\n1. Not all fields are filled in.\n2. Similar data is already in the database.\n3. Errors on the server.\n4. The phone number is not in the database."
                    readonly: True

                Button:
                    size_hint_y: 0.12
                    text: "Press to dismiss"
                    on_release: popup_invalid_data.dismiss()

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            GridLayout:
                cols: 2
                spacing: 10

                Label:
                    size_hint_x: 0.2
                    text: "Phone:"

                TextInput:
                    id: text_input_phone
                    multiline: False

                Label:
                    size_hint_x: 0.2
                    text: "Date:"

                TextInput:
                    id: text_input_date
                    multiline: False

            Button:
                size_hint_y: 0.2
                text: "Add person to meeting"
                on_release: root.button_add_person_to_meeting()

        GridLayout:
            cols: 2
            spacing: 10

            Label:
                size_hint_x: 0.2
                text: "Name:"

            TextInput:
                id: name_text
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Phone:"

            TextInput:
                id: phone_text
                multiline: False

        Button:
            size_hint_y: 0.2
            text: "Find"
            on_release: root.button_find_in_add_person_to_meeting(name_text.text, phone_text.text)

        ScrollView:
            id: scroll_view

            TextInput:
                id: text_input_list
                multiline: True
                readonly: True
                size_hint: 1, None
                height: max(self.minimum_height, scroll_view.height)
                on_parent: root.button_find_in_add_person_to_meeting()

        Button:
            size_hint_y: 0.2
            text: "<- Back"
            on_release: root.button_options()