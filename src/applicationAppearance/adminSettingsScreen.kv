RootWidget:
    container: container

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        Button:
            text: "Add person to the database"
            on_release: root.next_screen("addPersonToDB")

        Button:
            text: "Add person to meeting"
            on_release: root.next_screen("addPersonToMeeting")

        Button:
            text: "Remove person from the database"
            on_release: root.next_screen("removePersonFromDB")

        Button:
            text: "Remove person from meeting"
            on_release: root.next_screen("removePersonFromMeeting")

        Button:
            text: "Add application user"
            on_release: root.next_screen("addUserToDB")

        Button:
            text: "<- Back"
            on_release: root.next_screen("screenWithGuestsList")