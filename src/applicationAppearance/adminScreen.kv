RootWidget:
    container: container

    text_input_list_guests: text_input_list_guests

    BoxLayout:
        id: container
        orientation: "vertical"
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: 0.4
            orientation: "horizontal"
            padding: 10
            spacing: 10

            GridLayout:
                cols: 2

                Label:
                    text: "Date:"

                TextInput:
                    id: text_input_date
                    multiline: False

                Label:
                    text: "Name:"

                TextInput:
                    id: text_input_name
                    multiline: False

                Label:
                    text: "Phone:"

                TextInput:
                    id: text_input_phone
                    multiline: False

                Button:
                    text: "Find"
                    on_release: root.view_guests_list(text_input_date, text_input_name, text_input_phone)

            Button:
                size_hint_x: 0.2
                text: "Options"

        ScrollView:
            id: scroll_view
            TextInput:
                id: text_input_list_guests
                multiline: True
                readonly: True
                size_hint: 1, None
                height: max(self.minimum_height, scroll_view.height)
                on_parent: root.view_guests_list()