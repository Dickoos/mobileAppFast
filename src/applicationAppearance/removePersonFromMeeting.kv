RootWidget:
    container: container

    text_input_phone: text_input_phone
    text_input_date: text_input_date

    text_input_date_help: text_input_date_help
    text_input_name_help: text_input_name_help
    text_input_phone_help: text_input_phone_help

    text_input_list: text_input_list

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            GridLayout:
                cols: 2
                spacing: 10

                Label:
                    size_hint_x: 0.2
                    text: "Phone:"

                TextInput:
                    id: text_input_phone
                    multiline: False

                Label:
                    size_hint_x: 0.2
                    text: "Date:"

                TextInput:
                    id: text_input_date
                    multiline: False

            Button:
                size_hint_y: 0.2
                text: "Remove person from meeting"
                on_release: root.delete_guest_from_meeting()

        GridLayout:
            cols: 2
            spacing: 10

            Label:
                size_hint_x: 0.2
                text: "Date:"

            TextInput:
                id: text_input_date_help
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Name:"

            TextInput:
                id: text_input_name_help
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Phone:"

            TextInput:
                id: text_input_phone_help
                multiline: False

        Button:
            size_hint_y: 0.2
            text: "Find"
            on_release: root.show_list_of_guests(text_input_date_help.text, text_input_name_help.text, text_input_phone_help.text)

        ScrollView:
            id: scroll_view

            TextInput:
                id: text_input_list
                multiline: True
                readonly: True
                size_hint: 1, None
                height: max(self.minimum_height, scroll_view.height)
                on_parent: root.show_list_of_guests()

        Button:
            size_hint_y: 0.2
            text: "<- Back"
            on_release: root.options()