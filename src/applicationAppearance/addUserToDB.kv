RootWidget:
    container: container

    text_input_name: text_input_name
    text_input_login: text_input_login
    text_input_password: text_input_password
    text_input_phone: text_input_phone
    text_input_email: text_input_email
    text_input_user_type: text_input_user_type

    popup_invalid_data: popup_invalid_data

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        Popup:
            id: popup_invalid_data
            title: "Data entered incorrectly!"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 5
                spacing: 10

                TextInput:
                    text: "Wrong data.\nPossible reasons:\n1. Similar data is already in the database.\n2. Errors on the server."
                    readonly: True

                Button:
                    size_hint_y: 0.12
                    text: "Press to dismiss"
                    on_release: popup_invalid_data.dismiss()

        GridLayout:
            cols: 2
            spacing: 10

            Label:
                size_hint_x: 0.2
                text: "Name:"

            TextInput:
                id: text_input_name
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "login:"

            TextInput:
                id: text_input_login
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Password:"

            TextInput:
                id: text_input_password
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Phone:"

            TextInput:
                id: text_input_phone
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Email:"

            TextInput:
                id: text_input_email
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Type:"

            TextInput:
                id: text_input_user_type
                multiline: False

        Button:
            size_hint_y: 0.2
            text: "Write to database"
            on_release: root.add_user_to_db()

        Button:
            size_hint_y: 0.2
            text: "<- Back"
            on_release: root.next_screen("adminSettingsScreen")