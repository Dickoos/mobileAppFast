RootWidget:
    container: container

    popup_invalid_username_or_password: popup_invalid_username_or_password

    text_input_username: text_input_username
    text_input_password: text_input_password

    BoxLayout:
        id: container
        orientation: "vertical"
        padding: 10
        spacing: 10

        Popup:
            id: popup_invalid_username_or_password
            title: "Invalid username/password!"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 10
                spacing: 10

                TextInput:
                    text: "Invalid username / password!"
                    readonly: True

                Button:
                    size_hint_y: 0.12
                    text: "Press to dismiss"
                    on_release: popup_invalid_username_or_password.dismiss()

        GridLayout:
            cols: 2
            padding: 10
            spacing: 10

            Label:
                text: "Username:"

            TextInput:
                id: text_input_username
                multiline: False

            Label:
                text: "Password:"

            TextInput:
                id: text_input_password
                password: True
                multiline: False

        Button:
            size_hint_y: 0.12
            text: "Sign in"
            on_release: root.button_sign_in()