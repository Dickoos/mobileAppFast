RootWidget:
    container: container

    text_input_name: text_input_name
    text_input_login: text_input_login
    text_input_password: text_input_password
    text_input_phone: text_input_phone
    text_input_email: text_input_email
    text_input_user_type: text_input_user_type

    popup_invalid_data: popup_invalid_data
    popup_error_data: popup_error_data
    popup_after_add_from_csv: popup_after_add_from_csv

    popup_text_input_name: popup_text_input_name
    popup_text_input_login: popup_text_input_login
    popup_text_input_password: popup_text_input_password
    popup_text_input_phone: popup_text_input_phone
    popup_text_input_email: popup_text_input_email
    popup_text_input_user_type: popup_text_input_user_type

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        Popup:
            id: popup_invalid_data
            title: "Data entered incorrectly!"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 5
                spacing: 10

                TextInput:
                    text: "Wrong data.\nPossible reasons:\n1. Similar data is already in the database.\n2. Errors on the server.\n3. Error in csv file."
                    readonly: True

                Button:
                    size_hint_y: 0.12
                    text: "Press to dismiss"
                    on_release: popup_invalid_data.dismiss()

        Popup:
            id: popup_load_file
            title: "Select a file"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 5
                spacing: 10

                FileChooserListView:
                    id: file_chooser
                    path: "./"

                GridLayout:
                    cols: 2
                    spacing: 10
                    size_hint_y: 0.2

                    Button:
                        text: "Cancel"
                        on_release: popup_load_file.dismiss()

                    Button:
                        text: "Load"
                        on_release: root.load_csv(*file_chooser.selection), popup_load_file.dismiss()

        Popup:
            id: popup_error_data
            title: "Error data"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                spacing: 10

                GridLayout:
                    cols: 2
                    spacing: 10

                    Label:
                        size_hint_x: 0.2
                        text: "Name:"

                    TextInput:
                        id: popup_text_input_name
                        multiline: False

                    Label:
                        size_hint_x: 0.2
                        text: "login:"

                    TextInput:
                        id: popup_text_input_login
                        multiline: False

                    Label:
                        size_hint_x: 0.2
                        text: "Password:"

                    TextInput:
                        id: popup_text_input_password
                        multiline: False

                    Label:
                        size_hint_x: 0.2
                        text: "Phone:"

                    TextInput:
                        id: popup_text_input_phone
                        multiline: False

                    Label:
                        size_hint_x: 0.2
                        text: "Email:"

                    TextInput:
                        id: popup_text_input_email
                        multiline: False

                    Label:
                        size_hint_x: 0.2
                        text: "Type:"

                    TextInput:
                        id: popup_text_input_user_type
                        multiline: False

                Button:
                    size_hint_y: 0.2
                    text: "Generate password"
                    on_release: root.get_password(popup_text_input_password)

                Button:
                    size_hint_y: 0.2
                    text: "Write to database"
                    on_release: root.add_user_to_db_from_error_popup()

                Button:
                    size_hint_y: 0.2
                    text: "Ignore errors"
                    on_release: popup_error_data.dismiss(), popup_after_add_from_csv.open()

        Popup:
            id: popup_after_add_from_csv
            title: "Report!"
            on_parent:
                if self.parent == container: self.parent.remove_widget(self)

            BoxLayout:
                orientation: "vertical"
                padding: 5
                spacing: 10

                TextInput:
                    text: "Added: " + str(root.added_from_csv) + "\nIgnore: " + str(len(root.error_data))
                    readonly: True

                Button:
                    size_hint_y: 0.12
                    text: "Press to dismiss"
                    on_release: popup_after_add_from_csv.dismiss()

        GridLayout:
            cols: 2
            spacing: 10

            Label:
                size_hint_x: 0.2
                text: "Name:"

            TextInput:
                id: text_input_name
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "login:"

            TextInput:
                id: text_input_login
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Password:"

            TextInput:
                id: text_input_password
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Phone:"

            TextInput:
                id: text_input_phone
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Email:"

            TextInput:
                id: text_input_email
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Type:"

            TextInput:
                id: text_input_user_type
                multiline: False

        Button:
            size_hint_y: 0.2
            text: "Generate password"
            on_release: root.get_password(text_input_password)

        Button:
            size_hint_y: 0.2
            text: "Write to database"
            on_release: root.add_user_to_db()

        Button:
            size_hint_y: 0.2
            text: "Csv import"
            on_release: popup_load_file.open()

        Button:
            size_hint_y: 0.2
            text: "<- Back"
            on_release: root.next_screen("adminSettingsScreen")