RootWidget:
    container: container

    text_input_phone: text_input_phone
    text_input_list: text_input_list

    text_input_name_help: text_input_name_help
    text_input_phone_help: text_input_phone_help

    BoxLayout:
        id: container
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: 0.5

            GridLayout:
                cols: 2
                spacing: 10

                Label:
                    size_hint_x: 0.2
                    text: "Phone:"

                TextInput:
                    id: text_input_phone
                    multiline: False

            Button:
                size_hint_y: 0.5
                text: "Remove user from database"
                on_release: root.delete_user_from_db()

        GridLayout:
            cols: 2
            spacing: 10

            Label:
                size_hint_x: 0.2
                text: "Name:"

            TextInput:
                id: text_input_name_help
                multiline: False

            Label:
                size_hint_x: 0.2
                text: "Phone:"

            TextInput:
                id: text_input_phone_help
                multiline: False

        Button:
            size_hint_y: 0.2
            text: "Find"
            on_release: root.show_list_of_all_guests_or_users("users", text_input_name_help.text, text_input_phone_help.text)

        ScrollView:
            id: scroll_view

            TextInput:
                id: text_input_list
                multiline: True
                readonly: True
                size_hint: 1, None
                height: max(self.minimum_height, scroll_view.height)
                on_parent: root.show_list_of_all_guests_or_users("users")

        Button:
            size_hint_y: 0.2
            text: "<- Back"
            on_release: root.next_screen("adminSettingsScreen")